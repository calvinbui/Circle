<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:id="@+id/questionAsk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/question"
        android:layout_alignStart="@+id/question" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:hint="@string/questionAsk"
        android:layout_below="@+id/questionAsk"
        android:layout_alignLeft="@+id/questionOptionLabel"
        android:layout_alignStart="@+id/questionOptionLabel"
        android:text="@string/questionAsk" />

    <TextView
        android:id="@+id/questionOptionLabel"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="baladsasd"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questionOption1"
        android:layout_below="@+id/questionOptionLabel"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questionOption2"
        android:layout_below="@+id/questionOption1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>